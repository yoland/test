<?xml version="1.0" encoding="utf-8"?>
<cindy.android.test.synclistview.LoadStateView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/downloadStatusBox"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dip" >

    <ProgressBar
        android:id="@+id/progBar"
        style="@style/loading_l"
        android:layout_width="105.0px"
        android:layout_height="105.0px"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:id="@+id/downLoadErrMsgBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/downLoadErrText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15.0dip"
            android:textColor="@color/listTitle" />

        <Button
            android:id="@+id/btnListLoadErr"
            style="@style/Btn"
            android:text="@string/listReBtnText" />
    </LinearLayout>

</cindy.android.test.synclistview.LoadStateView>